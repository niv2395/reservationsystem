<% provide(:title, 'New announcement') %>
<div class = "center">
	<h1>New announcement</h1>
</div>


<div class="row">
  	<div class="col-md-6 col-md-offset-3">

    	<%= form_for(@announcement) do |f| %>

			<%= f.label :title, "Title*" %>
			<%= f.text_field :title, class:'form-control' %>

			<%= f.label :content, "Content*" %>
			<%= f.text_area :content, class:'form-control' %>

            <%= f.label :room_id, "Room*" %>
			<%= f.select(:room_id, {}, {}, {class:'form-control'}) do %>
                <% @relevant_rooms.each do |room| %>
                    <% if room != nil %>
                        <%= content_tag(:option, room.first, value: room.last) %>
                    <% end %>
                <% end %>
            <% end %>

			<%= f.submit "Create announcement", class: "btn btn-primary" %>
    	<% end %>
  	</div>
</div>