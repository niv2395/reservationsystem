<% provide(:title, 'Admin sign Up') %>
<div class = "center">
	<h1>Sign up</h1>
</div>

<div class="row">
  	<div class="col-md-6 col-md-offset-3">
    	<%= render 'shared/error_messages' %>
  		<p> <h3> Enter the admin details </h3> </p>
    	<%= form_for(@user) do |f| %>

			<%= f.label :name, "Name*" %>
			<%= f.text_field :name, class:'form-control' %>

			<%= f.label :email, "Email*" %>
			<%= f.email_field :email, class:'form-control' %>

			<%= f.label :password, "Password*" %>
			<%= f.password_field :password, class:'form-control' %>

			<%= f.label :password_confirmation, "Confirm Password*" %>
			<%= f.password_field :password_confirmation, class:'form-control' %>

			<%= f.label :ph_number, "Phone Number" %>
			<%= f.text_field :ph_number, class:'form-control'  %>

			<%= f.label :address, "Address" %>
			<%= f.text_field :address, class:'form-control'  %>
			<%= f.hidden_field :utype, value: "admin" %>
				
			<%= f.submit "Create the admin account", class: "btn btn-primary" %>
    	<% end %>
  	</div>
</div>
