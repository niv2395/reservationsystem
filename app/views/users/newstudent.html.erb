<% provide(:title, 'Sign Up') %>
<div class = "center">
	<h1>Sign up</h1>
</div>

<div class="row">
  	<div class="col-md-6 col-md-offset-3">
    	<%= render 'shared/error_messages' %>
    	<% if logged_in? %>
    		<p> <h3> Enter the student details</h3></p>
    	<% else %>
  			<p> <h3> Enter your details below </h3> </p>
  		<% end %>
    	<%= form_for(@user) do |f| %>

			<%= f.label :name, "Name*" %>
			<%= f.text_field :name, class:'form-control' %>

			<%= f.label :email, "Email*" %>
			<%= f.email_field :email, class:'form-control' %>

			<%= f.label :password, "Password*" %>
			<%= f.password_field :password, class:'form-control' %>

			<%= f.label :password_confirmation, "Confirm Password*" %>
			<%= f.password_field :password_confirmation, class:'form-control' %>

			<%= f.label :ph_number, "Phone Number" %>
			<%= f.text_field :ph_number, class:'form-control'  %>

			<%= f.label :address, "Address" %>
			<%= f.text_field :address, class:'form-control'  %>
			<%= f.hidden_field :utype, value: "student" %>
			<% if logged_in? %>
				<%= f.submit "Create student account", class: "btn btn-primary" %>
			<% else %>
  				<%= f.submit "Create my account", class: "btn btn-primary" %>
  			<% end %>
    	<% end %>
  	</div>
</div>
